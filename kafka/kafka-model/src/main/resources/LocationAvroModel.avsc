{"namespace": "com.microservices.demo.kafka.avro.model",
  "type": "record",
  "name": "LocationAvroModel",
  "fields": [
    {"name": "userId", "type": "long"},
    {"name": "id", "type": "long"},
    // coord should be a pair of latitude, longitude which is float here
    {"name": "coord", "type": {
      "type":"record",
      "name": "Coordinates",
      "fields": [
        {"name":  "lat", "type":  "float"},
        {"name":  "lon", "type":  "float"}
      ]
    }},
    // logicalType. date, timestamp-millis, timestamp-micros, time-millis, time-micros, decimal,
    {"name": "createdAt", "type": ["null", "long"], "logicalType": ["null", "date"]}
  ]
}